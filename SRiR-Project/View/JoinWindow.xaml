<Window x:Class="SRiR_Project.View.JoinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gra w statki - dołączanie do rozgrywki" Height="300" Width="300">
    <Grid>
        <Label Content="Adres IP" HorizontalAlignment="Left" Height="31" Margin="10,10,0,0" VerticalAlignment="Top" Width="65"/>
        <TextBox x:Name="IpAddresBox" HorizontalAlignment="Left" Height="20" Margin="92,14,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="163"/>
        <Label Content="Port" HorizontalAlignment="Left" Height="31" Margin="10,35,0,0" VerticalAlignment="Top" Width="65"/>
        <TextBox x:Name="PortBox" HorizontalAlignment="Left" Height="20" Margin="92,39,0,0" TextWrapping="Wrap" Text="8000" VerticalAlignment="Top" Width="163"/>
        <Button x:Name="JoingGame" Content="Dołącz do gry" HorizontalAlignment="Left" Height="38" Margin="78,78,0,0" VerticalAlignment="Top" Width="142" Click="JoingGame_Click"/>
        <TextBlock x:Name="InfoText" HorizontalAlignment="Left" Height="44" Margin="10,138,0,0" TextWrapping="Wrap" Text="Połącz się z serwerem" VerticalAlignment="Top" Width="274" TextAlignment="Center" FontStyle="Italic"/>
        <Button x:Name="Start" Content="Start" HorizontalAlignment="Left" Height="31" Margin="78,212,0,0" VerticalAlignment="Top" Width="134" IsEnabled="False" Click="Start_Click"/>

    </Grid>
</Window>
